{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:27015"
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 1000,
      "MaxConcurrentUpgradedConnections": 1000,
      "MaxRequestBodySize": null
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AppSettings": {
    //"FilePath": "D:\\--- Shared",
    "FilePath": "M:\\--- IMG\\Bg",
    //"FilePath": "M:\\Music",
    "MaxResultsPerPage": 10,
    "Cache": {
      //"PreviewPath": "D:\\--- Shared\\.prev",
      "PreviewPath": null,
      // In Bytes
      "PreviewMinSize": 100000,
      "Image": {
        "MaxWidth": 960,
        "MaxHeight": 540,
        "Upscale": false,
        // Valid Range  0 to 256
        // Note, values under 128 with the current WuQuantizer don't seem to change
        "MaxColors": 128
      }
    }
  },
  "AllowedHosts": "*"
}